extends layout

block title
  title Horizons | Log In

block content
  link(rel='stylesheet', href='/stylesheets/login.css')
  div(class="container myBorder")
    div(class="row inner-container")
      div(class="col-md-4 col-sm-4")
      div(class="col-md-4 col-sm-4 myBorder")
        h1= title
        br
        form(name="login", method="post", action="/logon")
          input(class="form-control", type="text", name="username", placeholder="Viking Username")
          input(class="form-control", type="password", name="password", placeholder="Password")
          br
          input(class="btn btn-default btn-primary form-control", type="submit", value="Enter")
      div(class="col-md-4 col-sm-4")

